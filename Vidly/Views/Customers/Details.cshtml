@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<h2> @Model.Name</h2>

<ul>
    <il>Membership type: @Model.MembershipType.Name</il>
    @if (Model.Birthdate.HasValue)
    {
        <il>Birthday: @Model.Birthdate.Value.ToString()</il>
    }

</ul>